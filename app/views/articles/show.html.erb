<% content_for :left_part do %>
    <%= CacheManager.cache_article_show(@article) { render :partial => 'articles/show_body' } %>
<% end %>

<% content_for :right_part do %>
    <%= CacheManager.cache_search_form(params) { render :partial => 'articles/search_form' } %>
    <%= CacheManager.cache_rubrics_for_article(@article) { render :partial => 'articles/rubrics_list' } %>
<% end %>

<% content_for :bottom do %>
    <%= Rails.cache.fetch("scroll_button") {render :partial => 'common/scroll_up_button'}%>
<% end %>
